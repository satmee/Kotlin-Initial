fun main(args : Array<String>) {
    val big = 42
    val small = 74

    /** If condition **/
    var maxValue: Int = if (big > small)
        big
    else
        small
    println(maxValue)

    /** When condition or Switch case which we find in C, C++, Java **/
    val school : Int = 75
        when (school) {
            42 -> println("The number is 4!")

            else -> {
                println("I don't know!")
            }
        }
}
